{
    "name": "bun-express-starter",
    "module": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "bun run ./src/index.ts",
        "dev": "bun --watch run ./src/index.ts",
        "db:up": "docker compose up -d",
        "db:down": "docker compose down",
        "db:gen": "bunx drizzle-kit generate:mysql",
        "db:push": "bunx drizzle-kit push:mysql",
        "db:studio": "bunx drizzle-kit studio",
        "db:drop": "bunx drizzle-kit drop",
        "format": "rome format ./src",
        "format:fix": "rome format --write ./src",
        "lint": "rome check ./src",
        "lint:fix": "rome check --apply ./src"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "bun-types": "latest",
        "drizzle-kit": "^0.19.11",
        "rome": "^12.1.3"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@t3-oss/env-core": "^0.6.0",
        "body-parser": "^1.20.2",
        "drizzle-orm": "^0.27.2",
        "drizzle-zod": "^0.4.4",
        "express": ">=5.0.0-beta.1",
        "mysql2": "^3.5.2",
        "winston": "^3.10.0",
        "zod": "^3.21.4"
    }
}
