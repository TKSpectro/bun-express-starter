{
    "eslint.enable": false,
    "prettier.enable": false,
    "editor.codeActionsOnSave": {
        "quickfix.rome": true,
        "source.organizeImports.rome": true,
        "source.fixAll": false,
        "source.organizeImports": false
    },
    "[javascript]": {
        "editor.defaultFormatter": "rome.rome",
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "[typescript]": {
        "editor.defaultFormatter": "rome.rome",
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "[json]": {
        "editor.defaultFormatter": "rome.rome"
    }
}