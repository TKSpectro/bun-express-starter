{
    "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": { "level": "error" }
            },
            "suspicious": {
                "noExplicitAny": { "level": "warn" }
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentSize": 4,
        "indentStyle": "space",
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "quoteProperties": "asNeeded",
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingComma": "all"
        }
    }
}
